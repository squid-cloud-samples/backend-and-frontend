{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "paths": {
      "common/*": [
        "../../common/src/*"
      ]
    }
  }
}
